{
  "compilerOptions": {
    "module": "ES6",
    "lib": ["ES6", "DOM"],

    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src", "./@types"],
  "exclude": ["node_modules"]
}
